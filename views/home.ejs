<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./partials/cssbootStraps') %>
    <title>Home</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
      <h1>All Blogs</h1>
      <div class="mt-3 row row-cols-3">
        <% if (locals.blogs.length>0) { %> <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card col" style="width: 18rem">
            <img src="/<%= blog.blogImage %>" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%=blog._id %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
    <%- include('./partials/jsbootStraps') %>
  </body>
</html>
